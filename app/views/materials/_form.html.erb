<%= form_for(material) do |f| %>
  <% if material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
      <% material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, placeholder:'Titulos' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder:'Description', maxlength:50 %>
  </div>

  
  <div class="field">
    <%= f.label :public_level %>
    <%= f.number_field :public_level %>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name %>
    <!-- Creditos a Mauro  -->
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.collection_select :level_id, Level.all, :id, :name %>
  </div>


  
  <%= f.fields_for :questions do |f| %>
      <fieldset>
        <%= f.label :content, "Pregunta" %> <br />
        <%= f.text_area :content %> <br />
        <%= f.check_box :_destroy %>
        <%= f.label :_destroy, "Eliminar" %>
        <%= f.fields_for :alternatives do |f| %>
          <fieldset>
            <%= f.label :content, "Alernativa" %>
            <%= f.text_field :content %>
            <%= f.check_box :_destroy %>
            <%= f.label :_destroy, "Eliminar" %>
          </fieldset>
        <% end %>
      </fieldset>
      <% end %>
  
    <%= f.submit %>

<% end %>

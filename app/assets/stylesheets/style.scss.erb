@import 'var.scss';
html{overflow-x:hidden;}

body{
	background-color:$gray;
	font-family: 'Roboto', sans-serif;
	font-size: 15px;
	color:$text;
	overflow-x:hidden;
	transition:$transition-2;

}

::selection{ background:$main; color:#fff;}
::-moz-selection {background:$main; color:#fff;}

a{text-decoration: none;}

input{
	border:0;
	outline: none;
}

h1,h2,h3,h4,h5,h6,p{cursor:default;}


/***NAV***/

.nav-fix{position:relative; height:80px; width:100%; margin-bottom:50px;transition:$transition-2}

header{
	position:fixed;
	top:0;
	width:100vw;
	background:$main;
	height:80px;
	z-index: 2;
	box-sizing: border-box;
	margin:0;
	transition:$transition-2;
	/*box-shadow:$shadow-soft;*/

	nav{
		position:relative;
		width:960px;
		height:80px;
		box-sizing:border-box;
		margin:0 auto;


		.btn-search{
			z-index:10;
			top:20px;
			width:300px;

			input{
				padding:10px 20px;

				font-size:15px;
			}

			button{
				width:30px;
				height:30px;
				top:5px;
				right:5px;
			}
		}


	}

	.logo{
		position:absolute;
		left:0;
		top:0;
		height:100%;
		width:300px;
		background:asset-url('logo.svg') no-repeat 20px 50%/130px;
	}



	.acc{
		position:absolute;
		width:600px;
		right:0;
		top:0;
		padding:10px;
		box-sizing:border-box;
		height:100%;
		color:#fff;


		.img-profile{
			position:absolute;
			right:20px;
			width: 60px;
			height:60px;
			background:no-repeat center/cover #ccc;
			border-radius:100%;
		}


		.date-acc{
			position:absolute;
			top:25px;
			width:120px;
			height:50px;
			right:90px;

			h4{
				font-size:14px;
				text-align:right;
				text-transform:capitalize;
				font-weight:500;
				cursor: pointer;
				transition:$transition-2;
			}


			.logout{
				position:absolute;
				right:0;
				display:inline;
				font-size:10px;
				font-weight:400;
				padding:5px 0 5px 15px;
				text-align:right;		
				transition:$transition-2;
				background:asset-url('logout.svg') no-repeat 0 5px/10px;

			}

		}
		

	}


	.copy-right{
		position:absolute;
		bottom:0;
		left:0;
		width:100%;
		padding:20px 60px;
		text-align:center;
		box-sizing:border-box;
		font-size:10px;
		transition:$transition-2;
	}

}


.user-edit{	
	margin:0 auto;
	position:relative;
	top:20px;
	background:#fff;
	width:650px;
	padding:50px 50px 20px 50px;
	box-sizing:border-box;
	transition:$transition-2;			
	transition-delay:.2s;
	box-shadow:$shadow-soft;

	h2{
		font-size:33px;
		color:$text-dark;
		font-weight:bold;
		text-align:center;
		margin:0 0 30px 0;
	}


	.input-profile{
		display:block;
		position:relative;
		width:46%;

		input{
			font-size:20px;
			display:block;
			padding:2px 0;
			border:0;
				//text-align:center;
				width:100%;
				border-bottom:1px solid $text-light;
				color:$text-darker;
				transition:$transition-2;
			}

			select{
				margin:5px 0 0 0;
				width:100%;
				border:1px solid $text-dark;
				padding:10px 5px;
				background:asset-url('down.svg') no-repeat 95% 50%/10px;
				-webkit-appearance: none;
				-moz-appearance:    none;
				appearance:         none;
			}

			input:focus{background-color:$gray-lighter;}

			label{
				text-transform:uppercase;
				font-size:9px;
				letter-spacing:1px;
				margin:3px 0 0 0;
				display:block;
			}

			em{
				position:absolute;
				right:0;
				bottom:0;
				font-size:9px;
				color:$main;
			}

		}


		.cont-names{
			position:relative;
			display:flex;
			justify-content:space-between;
			margin:0 0 50px 0;
		}

		.large{
			position:relative;
			width:500px;
		}

		
		.pwd-last{
			display:block;
			width:30%;
			margin:60px auto 0 auto;

			input{
				text-align:center;
			}

			label{
				display:block;
				text-align:center;
			}
		}


	}


	.btn-update{
		position:relative;		
		background:$main;
		color:#fff;
		text-transform:uppercase;
		border:0;
		border-radius:3px;
		padding:10px 15px;
		font-size:12px;
		transition:$transition-2;
		margin:50px auto 0 auto;
	}

	.delete-acc{
		position:relative;
		display:inline-block;
		font-size: 12px;
		margin:15px auto 30px 0;
	}

	.btn-upload{
		width: 150px;
		height: 150px;
		background: red;
		border-radius: 100%;
		position: absolute;
		top: -190px;
		left: calc(50% - 75px);
		z-index: 555;
		opacity:0;
		display:none;
		cursor: pointer;
	}




	.edit-profile{
		position:absolute;
		width:20px;
		top: 10px;
		right:5px;
		cursor: pointer;

		div{
			width:5px;
			height:5px;
			margin:0 auto 3px auto;
			border-radius:100%;
			background-color:$text-light;
			transition:$transition-2;

		}

	}

	.edit-profile:hover div{background-color:$text;}


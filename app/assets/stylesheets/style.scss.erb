.proyect-cont{
	background-color:#fff;
	box-shadow:$shadow;
	padding:50px;
	box-sizing:border-box;
	margin:50px 0;

	.title{
		font-size:40px;
		font-weight:bold;
		margin:0 0 10px 0;
	}

	.description{
		font-size:20px;
		width:100%;
		margin:0 0 10px 0;
	}

	.title:focus,
	.description:focus,
	.title:hover,
	.description:hover{
		background-color:$gray-lighter;
	}


	textarea{
		resize:none;
		border:0;
		outline:0;
		min-height:auto;
		overflow:hidden;
		min-height:auto!important;
		display:block;
	}

	
	.nested-question::after{
		z-index:1;
		content:'';	
		width: 0;
		height: 0;
		border-style: solid;
		border-width: 50px 50px 0 0;
		border-color: $text transparent transparent transparent;
		position:absolute;
		left:0px;
		top:0px;
	}

	.nested-question::before{
		z-index:2;
		content:counter(div);			
		color:#fff;
		position:absolute;
		left:0px;
		top:5px;
		width:28px;
		height:25px;
		line-height:25px;
		font-weight:bold;
		text-align:center;
		letter-spacing:-1.5px;
		font-size:17px;
	}

	.nested-question{
		position:relative;
		box-sizing:border-box;
		padding:20px 50px;
		counter-increment:div;
		border:1px solid $text;
		box-shadow:$shadow-question;
		margin:30px 0;

		fieldset{border:0; margin:0; padding:0;}

		.question{
			width:100%;
			font-size:17px;
			transition:$transition-2;
			padding:5px;
			box-sizing:border-box;
			height:auto;
			margin:0 0 20px 0;
			font-weight:500;
		}


		.question::-webkit-input-placeholder{color:$text; font-weight:400; }
		.question::-moz-placeholder {color:$text; font-weight:400;}			
		.question:-moz-placeholder {color:$text; font-weight:400;}

		textarea:focus,
		textarea:hover{background-color:$gray-lighter;}
	}

	.nested-alternative{
		position:relative;
		counter-increment:li;
		margin:2px 0;
		padding:5px 10px;

		input{
			margin:0 0 0 17px;
			font-size:16px;
		}
	}

	.nested-alternative::after{
		position:absolute;
		top:calc(50% - 11px);
		left:0px;
		width:18px;
		height:18px;
		border-radius:100%;
		border:1px solid $text;
		color:$text;

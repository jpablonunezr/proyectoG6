@import 'var.scss';
html{
	overflow-x:hidden;}
	body{
		background-color:$gray;
		font-family: 'Roboto', sans-serif;
		font-size: 15px;
		color:$text;
		overflow-x:hidden;

	}

	::selection{ background:$main; color:#fff;}
	::-moz-selection {background:$main; color:#fff;}

	a{text-decoration: none;}

	input{
		border:0;
		outline: none;
	}

	h1,h2,h3,h4,h5,h6,p{cursor:default;}


	/***NAV***/

	header{
		position:fixed;
		top:0;
		left:0;
		width:15vw;
	//max-width:270px;
	background:#fff;
	height:100%;
	z-index: 2;
	box-sizing: border-box;
	padding:30px;
	margin:0;
	transition:$transition-2;



	.acc{
		width:100%;


		.img-profile{
			position:relative;
			margin:0 auto;
			width: 150px;
			height:150px;
			background:no-repeat center/cover #ccc;
			border-radius:100%;
		}

		h4{
			font-size:22px;
			text-align:center;
			text-transform:capitalize;
			margin:20px 0 5px 0;
			color:$text-dark;
			font-weight:bold;
			letter-spacing:1px;
			transition:$transition-2;
		}

		h5{
			font-size:14px;
			text-align:center;
			margin:0 0 20px 0;	
			transition:$transition-2;		
		}

	}

	.logout{
		position:absolute;
		bottom:100px;
		width:100px;
		text-align:center;
		left:calc(50% - 50px);
		transition:$transition-2;

	}

	.copy-right{
		position:absolute;
		bottom:0;
		left:0;
		width:100%;
		padding:20px 60px;
		text-align:center;
		box-sizing:border-box;
		font-size:10px;
		transition:$transition-2;
	}

}


.edit-content{	
	transition-delay:.3s;
	opacity: 0;
	transform:translate3d(0,30px,0);
}

.edit-on{
	opacity:1;
	transform:translate3d(0,0,0);
}

.main-edit-on{
	transform:translate3d(15vw,0,0);
	position:fixed!important;
}

.footer-edit-on{
	transform:translate3d(0,-20px,0);
	opacity:0;
}

.user-edit{
	position:absolute;
	width:30vw;
	min-height:100vh;
	height:auto;
	padding: 30px 0 100px 0;

	.edit-content{
		margin:0 auto;
		position:relative;
		top:20px;
		width:400px;
			//overflow-x:hidden;
			transition:$transition-2;			
			transition-delay:.2s;
		}

		
		.input-profile{
			display:inline-block;			
			margin:0 20px 40px 0;
			width:188px;

			input{
				font-size:20px;
				display:block;
				padding:2px 0;
				border:0;
				//text-align:center;
				width:100%;
				border-bottom:1px solid $text-light;
				color:$text-darker;
				transition:$transition-2;
			}

			input:focus{background-color:$gray-lighter;}

			label{
				text-transform:uppercase;
				font-size:10px;
				letter-spacing:1px;
				margin:5px 0 0 0;
				display:block;
			}

		}


		.isecond{margin:0;}

		.large{
			position:relative;
			width:calc(70% - 20px);
			left:15%;
		}

		.msj{
			text-align:center;
			width:auto;
			display:block;
			font-size:16px;
			cursor: pointer;
			border-radius:3px;
			color:$text-darker;
			cursor: pointer;
			transition:$transition-2;
			overflow:hidden;
			margin:20px 0 5px 0;
		}

		.msj:hover{
			color:$main;

		}

		.hidde-pwd{
			position:relative;
			width:100%;
			height:0;
			transition:$transition-2;
			overflow:hidden;

			input,
			label{
				opacity:0;
				transition:$transition-2;
			}

			label{
				transform:translate3d(-10px,0, 0);
				transition-delay:0.3s;
			}

			input{
				width:50%;
			}
		}

		.pwd-show{
			input,
			label{
				opacity:1;
				width:100%;
				transform:translate3d(0,0,0);
			}


		}

		.pwd-last{
			display:block;
			width:30%;
			margin:60px auto 0 auto;

			input{
				text-align:center;
			}

			label{
				display:block;
				text-align:center;
			}
